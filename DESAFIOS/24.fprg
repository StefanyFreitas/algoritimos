            <assign variable="mult" expression="f*1+e*2+d*3"/>
            <output expression="&quot;A multiplica&#231;&#227;o do seu n&#250;mero invertido com a posi&#231;&#227;o deles &#233; &quot; &amp;mult" newline="True"/>
            <assign variable="num" expression="num%10"/>
            <output expression="&quot;O ultimo d&#237;gito do seu n&#250;mero &#233; &quot; &amp;num" newline="True"/>
