    <function name="Main" type="None" variable="">
        <parameters/>
        <body>
            <declare name="num, numi, soma, mult" type="Integer" array="False" size=""/>
            <declare name="a, b, c, d, e, f" type="Integer" array="False" size=""/>
            <output expression="&quot;Escreva um n&#250;mero de 3 digitos&quot;" newline="True"/>
            <input variable="num"/>
            <assign variable="a" expression="num/100"/>
            <assign variable="b" expression="num%100/10"/>
